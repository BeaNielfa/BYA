<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/hombreLayout"
                                                   android:background="@drawable/fondo_margaritas"
                                                   tools:context=".ui.catalogoUsuario.CatalogoHombreFragment">

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:id="@+id/view4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:id="@+id/view5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:src="@drawable/ic_camiseta"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgCatalogoHombreCamiseta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp" />

    <TextView
            android:text="@string/camiseta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tvCatalogoHombreCamiseta"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoHombreCamiseta" />

    <ImageView
            android:src="@drawable/ic_camisa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgCatalogoHombreCamisa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" />

    <TextView
            android:text="@string/camisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tvCatalogoHombreCamisa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoHombreCamisa" />

    <ImageView
            android:src="@drawable/ic_gorra"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:id="@+id/imgCatalogoHombreAccesorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
            android:text="@string/accesorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tvCatalogoHombreAccesorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoHombreAccesorio" />

    <ImageView
            android:src="@drawable/ic_jeansh"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgCatalogoHombreJeans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view5"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
            android:text="@string/jeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tvCatalogoHombreJeans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoHombreJeans" />


</androidx.constraintlayout.widget.ConstraintLayout>