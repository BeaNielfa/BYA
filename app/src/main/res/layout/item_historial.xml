<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/itemHitorial"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgItemHistorial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemHistorialNombre"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemHistorial"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemHistorialPrecio"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemHistorial"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemHistorialNombre" />


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemHistorialFecha"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemHistorial"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemHistorialPrecio" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id="@+id/viewHistorial"
            app:layout_constraintTop_toBottomOf="@+id/imgItemHistorial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_codigo_qr"
            android:id="@+id/imgItemHistorialQr"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemHistorial"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemHistorialFecha" />


</androidx.constraintlayout.widget.ConstraintLayout>