<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/itemCesta"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgItemCesta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemCestaNombre"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/imgItemCesta"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemCestaPrecio"
            app:layout_constraintTop_toBottomOf="@+id/tvItemCestaNombre"
            app:layout_constraintStart_toEndOf="@+id/imgItemCesta"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemCestaTalla"
            app:layout_constraintStart_toEndOf="@+id/imgItemCesta"
            app:layout_constraintTop_toBottomOf="@+id/tvItemCestaPrecio"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" android:textColor="@color/black"/>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imgItemCesta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view6" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_eliminar"
            android:id="@+id/imgItemCestaEliminar"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/view6" />

</androidx.constraintlayout.widget.ConstraintLayout>