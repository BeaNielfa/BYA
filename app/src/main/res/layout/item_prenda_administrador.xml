<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/itemPrendaAdministrador"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgItemPrendaAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrendaAdminNombre"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/imgItemPrendaAdmin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrendaAdminPrecio"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPrendaAdminNombre"
            app:layout_constraintStart_toEndOf="@+id/imgItemPrendaAdmin"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrendaAdminTipo"
            app:layout_constraintStart_toEndOf="@+id/imgItemPrendaAdmin"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPrendaAdminPrecio"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrendaAminRef"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPrendaAdminTipo"
            app:layout_constraintStart_toEndOf="@+id/imgItemPrendaAdmin"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold" android:textColor="@color/black"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrendaAdminStock"
            app:layout_constraintStart_toEndOf="@+id/imgItemPrendaAdmin"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPrendaAminRef"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" android:textColor="@color/black"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imgItemPrendaAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>