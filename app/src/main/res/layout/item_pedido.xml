<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/itemPedido"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="130dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgItemPedido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPedidoNombre"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemPedido"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPedidoPrecio"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPedidoNombre"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemPedido" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPedidoTipo"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgItemPedido"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPedidoPrecio" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPedidoEstado"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imgItemPedido"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPedidoTipo" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id="@+id/viewPedido"
            app:layout_constraintTop_toBottomOf="@+id/imgItemPedido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>