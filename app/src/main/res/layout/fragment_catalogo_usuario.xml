<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@drawable/pink_margaritas"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/catalogoUsuario"
                                                   tools:context=".ui.catalogoUsuario.CatalogoUsuarioFragment">

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/view" />

    <ImageView
            android:src="@drawable/ic_man"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imgCatalogoUsuarioHombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="32dp" />

    <TextView
            android:text="@string/hombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:id="@+id/tvCatalogoUsuarioHombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoUsuarioHombre"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

    <ImageView
            android:src="@drawable/ic_woman"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imgCatalogoUsuarioMujer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginTop="32dp" />

    <TextView
            android:text="@string/mujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:id="@+id/tvCatalogoUsuarioMujer"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCatalogoUsuarioMujer" />

</androidx.constraintlayout.widget.ConstraintLayout>