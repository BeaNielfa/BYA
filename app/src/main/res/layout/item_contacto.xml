<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/itemContacto"
                                                   android:background="@color/white"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:padding="5dp"
                                                   android:paddingTop="10dp"
                                                   android:layout_marginBottom="20dp"
                                                   android:orientation="horizontal">

    <ImageView
            android:id="@+id/imgItemContactoFoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" />


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id="@+id/viewContacto"
            tools:layout_editor_absoluteX="5dp"
            app:layout_constraintTop_toBottomOf="@+id/imgItemContactoFoto"
            android:layout_marginTop="8dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemContactoNombre"
            app:layout_constraintStart_toEndOf="@+id/imgItemContactoFoto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemContactoTemp"
            app:layout_constraintStart_toEndOf="@+id/imgItemContactoFoto"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemContactoNombre"
            android:layout_marginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>